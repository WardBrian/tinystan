{
  "name": "tinystan",
  "version": "0.0.2",
  "description": "Typescript wrappers around Stan models built with emscripten",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./util": {
      "import": {
        "types": "./dist/util.d.ts",
        "default": "./dist/util.js"
      },
      "require": {
        "types": "./dist/util.d.cts",
        "default": "./dist/util.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": "https://github.com/WardBrian/tinystan",
  "author": "Brian Ward",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier . --write",
    "attw": "attw --pack .",
    "doc": "jsdoc2md --template ./doc/language-doc.hbs --plugin @godaddy/dmd --heading-depth=3 --configure ./doc/jsdoc2md.json --files src/*.ts "
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/util.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.3",
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@godaddy/dmd": "^1.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.4.0",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^9.0.5",
    "prettier": "^3.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
